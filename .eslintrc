{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "__DEV__": true,
    "__SERVER__": true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "rules": {
    // Strict mode
    "strict": [2, "never"],

    // Code style
    "indent": [2, 2],
    "quotes": [2, "single"],
    "semi": [2, "never"],
    "no-lonely-if": 2,
    "eol-last": 0,
    "no-else-return": 0,
    "no-empty": 0,
    "no-underscore-dangle": 0,
    "no-console": 0,
    "space-before-function-paren": 0,
    "id-length": 0,
    "func-names": 0
  }
}
